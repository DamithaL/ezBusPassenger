<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/quickChatResponseTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/contact_us_quick_chat_response"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="35dp"
        android:textSize="20sp"
        android:textColor="@color/colorGreen"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/quickChatLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Welcome text       -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/contact_us_quick_chat_welcome"
            android:textSize="16sp" />

        <!-- Name text box   -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name*"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/nameEditText"
            style="@style/EditTextSettings"
            android:hint="Enter Full Name Here"
            android:inputType="textPersonName" />

        <!-- Email text box  -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email*"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/emailEditText"
            style="@style/EditTextSettings"
            android:hint="Enter Email Address"
            android:inputType="textEmailAddress" />

        <!-- Message text box  -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message*"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/messageEditText"
            style="@style/EditTextSettings"
            android:layout_height="200dp"
            android:hint="Enter Your Message Here" />

        <!-- Send Message Button  -->
        <Button
            android:id="@+id/sendMessageButton"
            style="@style/Buttons"
            android:text="Send Message" />

    <!-- Close Button  -->
    <Button
        android:id="@+id/closeButton"
        style="@style/Buttons"
        android:backgroundTint="@color/gray"
        android:text="Close" />

    </LinearLayout>
</LinearLayout>
