<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Login.SignUpEmailVerification">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <View
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/main_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify Email Address"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter the six-digit code we sent to your email to verify your account"
           android:textColor="@color/gray"/>

        <View
            android:id="@+id/view4"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/errorMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/color_red"/>

        <GridLayout
            android:id="@+id/gridLayoutCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="6"
            android:rowCount="1"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="32dp"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- Add 6 EditText views for each digit -->
            <EditText
                android:id="@+id/editTextDigit1"
                style="@style/DigitEditText"
                android:inputType="number"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/editTextDigit2"
                style="@style/DigitEditText"
                android:inputType="number"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/editTextDigit3"
                style="@style/DigitEditText"
                android:inputType="number"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/editTextDigit4"
                style="@style/DigitEditText"
                android:inputType="number"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/editTextDigit5"
                style="@style/DigitEditText"
                android:inputType="number"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/editTextDigit6"
                style="@style/DigitEditText"
                android:inputType="number"
                android:maxLength="1"/>
        </GridLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>


        <TextView
            android:id="@+id/conditionsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please be patient as it may take a few minutes for the verification code to arrive. If you do not receive the code promptly, kindly check your spam folder."
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:layout_centerVertical="true"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/verifyButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Verify"
            app:cornerRadius="30dp"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/ResendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you still haven't received the code, Resend code"
            android:layout_gravity="center"
            android:layout_centerVertical="true"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>

    </LinearLayout>

    <!-- Loading ProgressBar -->
    <RelativeLayout
        android:id="@+id/loadingProgressBar"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">

        <!-- Dark overlay -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000" />

        <!-- ProgressBar -->
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center" />

    </RelativeLayout>

</RelativeLayout>